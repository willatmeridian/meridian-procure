---
import Layout from '../layouts/Layout.astro';
import NavigationBarSection from '../components/NavigationBarSection.jsx';
import GetInTouchSection from '../components/sections/GetInTouchSection.astro';
import LocationsSection from '../components/sections/LocationsSection.astro';
import FooterSection from '../components/sections/FooterSection.astro';
---

<Layout title="Contact Us - Meridian | Get In Touch Today">
  <div class="bg-white flex flex-row justify-center w-full">
    <div class="bg-white overflow-hidden w-full max-w-[1440px] relative">
      <!-- Navigation Bar Section -->
      <NavigationBarSection client:load />

      <!-- Hero Section with contact-specific content -->
      <section class="relative w-full py-16 sm:py-24 bg-gray-800 mt-[60px] sm:mt-[88px]">
        <div class="relative w-full h-full">
          <!-- Main Content Container -->
          <div class="relative z-10 flex flex-col items-center justify-center py-12 sm:py-16 px-4 sm:px-6 lg:px-8">
            <!-- Main Heading -->
            <h1 class="font-['Instrument_Sans',Helvetica] font-bold text-white text-center mb-6 sm:mb-8 text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-[90px] leading-tight sm:leading-tight md:leading-tight lg:leading-tight xl:leading-[90px]">
              Contact Us
            </h1>

            <!-- Subheading -->
            <h2 class="font-['Instrument_Sans',Helvetica] font-semibold text-white text-center leading-relaxed max-w-4xl text-sm sm:text-base md:text-lg lg:text-xl xl:text-[23px] sm:leading-6 md:leading-7 lg:leading-8 xl:leading-[30px] mb-6 sm:mb-8">
              Ready to get started? Let's discuss your pallet needs
              <br />
              Call us, email us, or fill out our contact form below
            </h2>

            <!-- Quick Contact Info -->
            <div class="mt-8 flex flex-col sm:flex-row gap-8 text-white">
              <div class="flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <span class="font-semibold [font-family:'Instrument_Sans',Helvetica]">1-800-PALLETS</span>
              </div>

              <div class="flex items-center gap-3">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <span class="font-semibold [font-family:'Instrument_Sans',Helvetica]">info@meridianprocure.com</span>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Get In Touch Section -->
      <GetInTouchSection />

      <!-- Locations Section -->
      <LocationsSection />
    </div>
  </div>
  
  <!-- Footer Section - Full Width Background -->
  <FooterSection />
</Layout>