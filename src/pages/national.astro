---
import Layout from '../layouts/Layout.astro';
import NavigationBarSection from '../components/NavigationBarSection.jsx';
import QuoteFormSection from '../components/sections/QuoteFormSection.astro';
import FooterSection from '../components/sections/FooterSection.astro';
---

<Layout title="National Procurement Solutions - Meridian | Nationwide Pallet Supply">
  <div class="bg-white flex flex-row justify-center w-full">
    <div class="bg-white overflow-hidden w-full max-w-[1440px] relative">
      <!-- Navigation Bar Section -->
      <NavigationBarSection client:load />

      <!-- Hero Section -->
      <section class="relative w-full bg-[#1b263b] mt-[60px] sm:mt-[88px]">
        <div class="relative w-full h-full">
          <!-- Main Content Container -->
          <div class="relative z-10 flex flex-col items-center justify-center py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8">
            <!-- Main Heading -->
            <h1 class="font-['Instrument_Sans',Helvetica] font-bold text-white text-center mb-4 sm:mb-6 text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-[90px] leading-tight sm:leading-tight md:leading-tight lg:leading-tight xl:leading-[90px]">
              National Procurement
              <br />
              Solutions
            </h1>

            <!-- Subheading -->
            <h2 class="font-['Instrument_Sans',Helvetica] font-semibold text-white text-center leading-relaxed max-w-4xl text-sm sm:text-base md:text-lg lg:text-xl xl:text-[23px] sm:leading-6 md:leading-7 lg:leading-8 xl:leading-[30px]">
              Streamlined pallet supply for enterprise customers
              <br />
              Coast-to-coast coverage with consistent quality and pricing
            </h2>
          </div>
        </div>
      </section>

      <!-- Overview Section -->
      <section class="w-full py-12 sm:py-16 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="text-center mb-8 sm:mb-12">
            <h2 class="text-2xl sm:text-3xl font-bold text-gray-900 mb-4 [font-family:'Instrument_Sans',Helvetica]">
              Enterprise Pallet Solutions
            </h2>
            <p class="text-base sm:text-lg text-gray-600 max-w-3xl mx-auto [font-family:'Instrument_Sans',Helvetica]">
              Our national procurement program provides large-scale enterprises with comprehensive pallet solutions 
              across multiple locations. From coast to coast, we deliver consistent quality, competitive pricing, 
              and reliable service that scales with your business needs.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-6 [font-family:'Instrument_Sans',Helvetica]">
                Why Choose Our National Program?
              </h3>
              <div class="space-y-4">
                <div class="flex items-start gap-4">
                  <div class="w-6 h-6 bg-[#e1c16e] rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <p class="text-gray-700 [font-family:'Instrument_Sans',Helvetica]">
                    <strong>Nationwide Coverage:</strong> 50+ distribution centers across the United States
                  </p>
                </div>
                
                <div class="flex items-start gap-4">
                  <div class="w-6 h-6 bg-[#e1c16e] rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <p class="text-gray-700 [font-family:'Instrument_Sans',Helvetica]">
                    <strong>Consistent Quality:</strong> Standardized specifications and quality control across all locations
                  </p>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-6 h-6 bg-[#e1c16e] rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <p class="text-gray-700 [font-family:'Instrument_Sans',Helvetica]">
                    <strong>Volume Pricing:</strong> Competitive rates based on your total national volume
                  </p>
                </div>

                <div class="flex items-start gap-4">
                  <div class="w-6 h-6 bg-[#e1c16e] rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  <p class="text-gray-700 [font-family:'Instrument_Sans',Helvetica]">
                    <strong>Dedicated Support:</strong> Single point of contact for all your locations
                  </p>
                </div>
              </div>
            </div>

            <div>
              <h3 class="text-2xl font-semibold text-gray-900 mb-6 [font-family:'Instrument_Sans',Helvetica]">
                Services Included
              </h3>
              <div class="space-y-4">
                <div class="bg-gray-50 rounded-lg p-4">
                  <h4 class="font-semibold text-gray-900 mb-2 [font-family:'Instrument_Sans',Helvetica]">Supply Chain Management</h4>
                  <p class="text-gray-600 text-sm [font-family:'Instrument_Sans',Helvetica]">
                    End-to-end pallet procurement, inventory management, and delivery coordination
                  </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <h4 class="font-semibold text-gray-900 mb-2 [font-family:'Instrument_Sans',Helvetica]">Custom Solutions</h4>
                  <p class="text-gray-600 text-sm [font-family:'Instrument_Sans',Helvetica]">
                    Tailored pallet designs and specifications to meet your unique requirements
                  </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <h4 class="font-semibold text-gray-900 mb-2 [font-family:'Instrument_Sans',Helvetica]">Reporting & Analytics</h4>
                  <p class="text-gray-600 text-sm [font-family:'Instrument_Sans',Helvetica]">
                    Detailed reporting on usage, costs, and performance metrics across all locations
                  </p>
                </div>

                <div class="bg-gray-50 rounded-lg p-4">
                  <h4 class="font-semibold text-gray-900 mb-2 [font-family:'Instrument_Sans',Helvetica]">Emergency Support</h4>
                  <p class="text-gray-600 text-sm [font-family:'Instrument_Sans',Helvetica]">
                    24/7 support for urgent orders and last-minute requirements
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Industries Served Section -->
      <section class="w-full py-16 bg-gray-50">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4 [font-family:'Instrument_Sans',Helvetica]">
              Industries We Serve
            </h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto [font-family:'Instrument_Sans',Helvetica]">
              Our national procurement solutions support diverse industries across the country
            </p>
          </div>
          
          <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            <div class="text-center">
              <div class="w-16 h-16 bg-[#131f5b] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 [font-family:'Instrument_Sans',Helvetica]">Manufacturing</h4>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-[#131f5b] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 3H3m4 10l-1 4h12m-6 4a2 2 0 100-4 2 2 0 000 4zm6 0a2 2 0 100-4 2 2 0 000 4z"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 [font-family:'Instrument_Sans',Helvetica]">Retail</h4>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-[#131f5b] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 [font-family:'Instrument_Sans',Helvetica]">Logistics</h4>
            </div>

            <div class="text-center">
              <div class="w-16 h-16 bg-[#131f5b] rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-900 [font-family:'Instrument_Sans',Helvetica]">Distribution</h4>
            </div>
          </div>
        </div>
      </section>

      <!-- Benefits Section -->
      <section class="w-full py-16 bg-white">
        <div class="max-w-4xl mx-auto px-4 text-center">
          <h2 class="text-3xl font-bold text-gray-900 mb-8 [font-family:'Instrument_Sans',Helvetica]">
            Why Enterprise Customers Choose Meridian
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
            <div class="text-center">
              <div class="text-4xl font-bold text-[#131f5b] mb-2 [font-family:'Instrument_Sans',Helvetica]">2,000+</div>
              <div class="text-gray-600 [font-family:'Instrument_Sans',Helvetica]">Trusted Partners Nationwide</div>
            </div>
            
            <div class="text-center">
              <div class="text-4xl font-bold text-[#131f5b] mb-2 [font-family:'Instrument_Sans',Helvetica]">24/7</div>
              <div class="text-gray-600 [font-family:'Instrument_Sans',Helvetica]">Customer Support</div>
            </div>
            
            <div class="text-center">
              <div class="text-4xl font-bold text-[#131f5b] mb-2 [font-family:'Instrument_Sans',Helvetica]">99.5%</div>
              <div class="text-gray-600 [font-family:'Instrument_Sans',Helvetica]">On-Time Delivery</div>
            </div>
          </div>

          <p class="text-lg text-gray-600 mb-8 [font-family:'Instrument_Sans',Helvetica]">
            Join hundreds of enterprise customers who trust Meridian for their nationwide pallet procurement needs. 
            Our proven track record of reliability, quality, and cost-effectiveness makes us the preferred choice for 
            large-scale operations.
          </p>
        </div>
      </section>

      <!-- Quote Form Section -->
      <QuoteFormSection 
        title="Ready to Streamline Your National Procurement?"
        subtitle="Get a custom quote for your enterprise pallet needs. Tell us about your locations and requirements, and we'll provide a comprehensive national solution."
      />
    </div>
  </div>
  
  <!-- Footer Section - Full Width Background -->
  <FooterSection />
</Layout>