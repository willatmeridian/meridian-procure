---
import '../styles/global.css'

interface Props {
	title?: string;
}

const { title = "Astro Basics" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Preload critical hero images for better LCP -->
		<link rel="preload" as="image" href="/img/hero/homepage-mobile.webp" media="(max-width: 768px)" />
		<link rel="preload" as="image" href="/img/hero/homepage-desktop.webp" media="(min-width: 769px)" />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
