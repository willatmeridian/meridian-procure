---
import '../styles/global.css'

interface Props {
	title?: string;
	description?: string;
	keywords?: string;
	canonical?: string;
	ogImage?: string;
}

const { 
	title = "Meridian | Industrial Pallet Solutions & Supply Chain Excellence",
	description = "Leading provider of high-quality industrial pallets across 20+ US locations. Custom pallets, recycled options, and heat-treated solutions. Fast delivery, competitive pricing, expert supply chain support.",
	keywords = "industrial pallets, custom pallets, recycled pallets, heat treated pallets, pallet supplier, supply chain solutions, logistics, pallet delivery, wooden pallets",
	canonical,
	ogImage = "/img/meridian-og-image.jpg"
} = Astro.props;

// Get current URL for canonical
const currentUrl = canonical || new URL(Astro.request.url).href;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Primary SEO Elements -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<link rel="canonical" href={currentUrl} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={currentUrl} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={ogImage} />
		<meta property="og:site_name" content="Meridian" />
		
		<!-- Twitter -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content={currentUrl} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta name="twitter:image" content={ogImage} />
		
		<!-- Additional SEO -->
		<meta name="robots" content="index, follow" />
		<meta name="author" content="Meridian" />
		<meta name="language" content="en-US" />
		<meta name="revisit-after" content="7 days" />
		
		<!-- Business Information -->
		<meta name="geo.region" content="US" />
		<meta name="geo.placename" content="United States" />
		<meta name="business:contact_data:phone_number" content="+12144448963" />
		<meta name="business:contact_data:website" content="https://meridian-procure.vercel.app" />
		
		<!-- Preload critical hero images for better LCP -->
		<link rel="preload" as="image" href="/img/hero/homepage-mobile.webp" media="(max-width: 768px)" />
		<link rel="preload" as="image" href="/img/hero/homepage-desktop.webp" media="(min-width: 769px)" />
		
		<!-- DNS prefetch for external resources -->
		<link rel="dns-prefetch" href="//fonts.googleapis.com" />
		<link rel="dns-prefetch" href="//fonts.gstatic.com" />
		
		<!-- Preload critical fonts for better CLS -->
		<link rel="preload" href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" />
		<noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400&display=swap" /></noscript>
		
		<!-- Critical CSS for above-the-fold content -->
		<style>
			/* Critical styles for above-fold content */
			body {
				font-family: 'Instrument Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
				margin: 0;
				line-height: 1.5;
				background-color: white;
			}
			
			/* Navigation critical styles */
			nav {
				position: fixed;
				top: 0;
				left: 0;
				right: 0;
				z-index: 50;
				background-color: white;
				box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
				padding-bottom: 12px;
			}
			
			@media (min-width: 640px) {
				nav {
					padding-bottom: 20px;
				}
			}
			
			/* Hero section critical styles */
			.hero-section, section.relative {
				position: relative;
				width: 100%;
				height: 600px;
				margin-top: 60px;
				background-color: #374151;
			}
			
			@media (min-width: 640px) {
				.hero-section, section.relative {
					height: 700px;
					margin-top: 88px;
				}
			}
			
			@media (min-width: 1024px) {
				.hero-section, section.relative {
					height: 964px;
				}
			}
			
			/* Prevent layout shift */
			img {
				max-width: 100%;
				height: auto;
			}
			
			/* Font display optimization */
			@font-face {
				font-family: 'Instrument Sans';
				font-display: swap;
			}
			
			/* Critical layout containers */
			.max-w-1440 {
				max-width: 1440px;
				margin: 0 auto;
			}
			
			/* Performance optimizations */
			* {
				box-sizing: border-box;
			}
			
			/* Reduce paint complexity */
			.fixed {
				transform: translateZ(0);
			}
		</style>
		
		<!-- Structured Data - Organization -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "Meridian",
			"description": "Leading provider of industrial pallet solutions and supply chain excellence",
			"url": "https://meridian-procure.vercel.app",
			"telephone": "+1-214-444-8963",
			"email": "info@meridianpkg.com",
			"address": {
				"@type": "PostalAddress",
				"addressCountry": "US"
			},
			"sameAs": [
				"https://www.linkedin.com/company/meridian-procure"
			],
			"contactPoint": {
				"@type": "ContactPoint",
				"telephone": "+1-214-444-8963",
				"contactType": "customer service",
				"availableLanguage": "English"
			}
		}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
