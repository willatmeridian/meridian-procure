---
// This component will receive pallet type data from Sanity CMS
// For now, using placeholder data structure
interface Props {
  palletName?: string;
  palletDescription?: string;
  palletImage?: string;
  palletSpecs?: string[];
  palletPrice?: string;
}

const { 
  palletName = "Grade A Pallets",
  palletDescription = "Our Grade A pallets represent the highest quality recycled pallets available in the market. These pallets have been carefully inspected and refurbished to meet strict quality standards, ensuring maximum durability and reliability for your shipping and storage needs.",
  palletImage = "/img/48x40-grade-a-stringer-wooden-pallet.png",
  palletSpecs = [
    "Dimensions: 48x40 inches",
    "Material: High-quality hardwood",
    "Condition: Recycled, minimal wear",
    "Entry: 4-Way forklift access",
    "Weight capacity: 2,500 lbs",
    "ISPM-15 certified available"
  ],
  palletPrice = "$10"
} = Astro.props;
---

<section class="w-full py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center gap-12">
      <!-- Text Content - Left Column -->
      <div class="flex-1 lg:pr-8">
        <div class="mb-6">
          <span class="inline-block px-4 py-2 bg-meridian-gold text-white text-sm font-semibold rounded-full mb-4 [font-family:'Instrument_Sans',Helvetica]">
            PREMIUM QUALITY
          </span>
          <h2 class="text-4xl font-bold text-gray-900 mb-4 [font-family:'Instrument_Sans',Helvetica]">
            {palletName}
          </h2>
        </div>
        
        <div class="prose prose-lg text-gray-700 mb-8">
          <p class="text-lg leading-relaxed [font-family:'Instrument_Sans',Helvetica]">
            {palletDescription}
          </p>
        </div>
        
        <div class="mb-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4 [font-family:'Instrument_Sans',Helvetica]">
            Specifications
          </h3>
          <div class="space-y-3">
            {palletSpecs.map((spec, index) => (
              <div key={index} class="flex items-start gap-3">
                <div class="w-6 h-6 bg-meridian-gold rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-gray-800" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <p class="text-gray-700 [font-family:'Instrument_Sans',Helvetica]">
                  {spec}
                </p>
              </div>
            ))}
          </div>
        </div>
        
      </div>
      
      <!-- Image - Right Column -->
      <div class="flex-1">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
          <img 
            src={palletImage}
            alt={palletName}
            class="w-full h-96 object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
      </div>
    </div>
  </div>
</section>