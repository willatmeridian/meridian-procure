---
import HubSpotContactForm from "../HubSpotContactForm.jsx";
---

<section class="w-full py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-gray-900 mb-4 [font-family:'Instrument_Sans',Helvetica]">
        Get In Touch
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto [font-family:'Instrument_Sans',Helvetica]">
        Ready to get started? Contact us today to discuss your pallet needs or submit a request for quote
      </p>
    </div>
    
    <div class="flex flex-col lg:flex-row gap-12">
      <!-- Contact Information - Left Column -->
      <div class="flex-1 lg:pr-8">
        <div class="mb-8">
          <h3 class="text-2xl font-semibold text-gray-900 mb-6 [font-family:'Instrument_Sans',Helvetica]">
            Contact Information
          </h3>
          
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-meridian-gold rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1 [font-family:'Instrument_Sans',Helvetica]">
                  Email Us
                </h4>
                <p class="text-gray-600 [font-family:'Instrument_Sans',Helvetica]">
                  info@meridianpkg.com
                </p>
                <p class="text-sm text-gray-500 [font-family:'Instrument_Sans',Helvetica]">
                  We'll respond within 24 hours
                </p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-meridian-blue rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1 [font-family:'Instrument_Sans',Helvetica]">
                  Call Us
                </h4>
                <a href="tel:+12144448963" class="text-gray-600 hover:text-[#1e308e] transition-colors duration-200 [font-family:'Instrument_Sans',Helvetica] underline">
                  (214) 444-8963
                </a>
                <p class="text-sm text-gray-500 [font-family:'Instrument_Sans',Helvetica]">
                  Mon-Fri: 8:00 AM - 6:00 PM EST
                </p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 bg-meridian-gold rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-gray-900 mb-1 [font-family:'Instrument_Sans',Helvetica]">
                  Business Hours
                </h4>
                <div class="text-gray-600 space-y-1 [font-family:'Instrument_Sans',Helvetica]">
                  <p>Monday - Friday: 8:00 AM - 6:00 PM EST</p>
                  <p>Saturday - Sunday: Closed</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Contact Form - Right Column -->
      <div class="flex-1">
        <HubSpotContactForm client:load />
      </div>
    </div>
  </div>
</section>