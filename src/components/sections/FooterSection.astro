---
// Data for footer columns
const footerData = {
  solutions: {
    title: "SOLUTIONS",
    links: [
      { text: "Nationwide Procurement", href: "/national" },
      { text: "Buy Pallets Now", href: "/buy-now" },
    ],
  },
  locations: {
    title: "LOCATIONS",
    links: [
      { text: "Los Angeles, CA", href: "/locations/los-angeles" },
      { text: "Atlanta, GA", href: "/locations/atlanta" },
      { text: "Chicago, IL", href: "/locations/chicago" },
      { text: "Houston, TX", href: "/locations/houston" },
      { text: "All Locations   →", href: "/locations" },
    ],
  },
  company: {
    title: "COMPANY",
    links: [
      { text: "About Us", href: "/about" },
      { text: "Blogs & Tips", href: "/blogs-tips" },
      { text: "Contact Us", href: "/contact" },
    ],
  },
};
---

<footer class="w-full bg-[#1b263b] py-20">
  <div class="max-w-[1440px] mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between">
      <!-- Company Logo and Contact Info -->
      <div class="mb-10 md:mb-0">
        <img
          class="w-[315px] h-[66px] object-cover mb-6"
          alt="Meridian logo white"
          src="/img/meridian-logo-white-text-cropped-1.webp"
          loading="lazy"
        />
        <div class="[font-family:'Instrument_Sans',Helvetica] font-medium text-white text-base leading-[25.6px] mb-3">
          Have questions? Call us now: <a href="tel:+12144448963" onclick="return gtag_report_conversion('tel:+12144448963');" class="text-[#e1c16e] hover:text-white transition-colors duration-200 underline">(214) 444-8963</a>
        </div>
        <div class="[font-family:'Instrument_Sans',Helvetica] font-medium text-white text-base leading-[25.6px] mb-1">
          Orders@meridianpkg.com
        </div>
        <div class="[font-family:'Instrument_Sans',Helvetica] font-medium text-white text-base leading-[25.6px] mb-4">
          Monday - Friday: 8:00 AM - 6:00 PM EST
        </div>
        
        <!-- Social Media Links -->
        <div class="flex items-center gap-4">
          <a 
            href="https://www.linkedin.com/company/meridian-procure"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full transition-colors duration-200"
            aria-label="Follow Meridian on LinkedIn"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          
          <a 
            href="https://facebook.com/meridianpkg"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center w-10 h-10 bg-white/10 hover:bg-white/20 rounded-full transition-colors duration-200"
            aria-label="Follow Meridian on Facebook"
          >
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Footer Columns -->
      <div class="flex flex-wrap gap-10 md:gap-16">
        <!-- Solutions Column -->
        <div class="flex flex-col gap-3.5">
          <h3 class="[font-family:'Instrument_Sans',Helvetica] font-bold text-[#e1c16e] text-lg leading-[25.6px]">
            {footerData.solutions.title}
          </h3>
          {footerData.solutions.links.map((link, index) => (
            <a
              key={`solution-${index}`}
              href={link.href}
              class="[font-family:'Instrument_Sans',Helvetica] font-semibold text-white text-base leading-[25.6px] hover:text-[#e1c16e] transition-colors duration-200"
            >
              {link.text}
            </a>
          ))}
        </div>

        <!-- Locations Column -->
        <div class="flex flex-col gap-3.5">
          <h3 class="[font-family:'Instrument_Sans',Helvetica] font-bold text-[#e1c16e] text-lg leading-[25.6px]">
            {footerData.locations.title}
          </h3>
          {footerData.locations.links.map((link, index) => (
            <a
              key={`location-${index}`}
              href={link.href}
              class="[font-family:'Instrument_Sans',Helvetica] font-semibold text-white text-base leading-[25.6px] hover:text-[#e1c16e] transition-colors duration-200"
            >
              {link.text}
            </a>
          ))}
        </div>

        <!-- Company Column -->
        <div class="flex flex-col gap-3.5">
          <h3 class="[font-family:'Instrument_Sans',Helvetica] font-bold text-[#e1c16e] text-lg leading-[25.6px]">
            {footerData.company.title}
          </h3>
          {footerData.company.links.map((link, index) => (
            <a
              key={`company-${index}`}
              href={link.href}
              class="[font-family:'Instrument_Sans',Helvetica] font-semibold text-white text-base leading-[25.6px] hover:text-[#e1c16e] transition-colors duration-200"
            >
              {link.text}
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-16 [font-family:'Instrument_Sans',Helvetica] font-medium text-white text-base leading-[25.6px]">
      © 2025 Meridian Technologies. All rights reserved.
    </div>
  </div>
</footer>